<theme>
   <formatVersion>7</formatVersion>

   <view name="system,basic,detailed,video,grid">
      <helpsystem name="help">
         <pos>1 1</pos>
      </helpsystem>
      <image name="logo">
         <path>./_inc/systems/${system.theme}.svg</path>
      </image>
      <text name="logoText">
         <fontPath>./_inc/fonts/ChangaOne-Italic.ttf</fontPath>
         <forceUppercase>true</forceUppercase>
         <lineSpacing>1</lineSpacing>
         <color>ffffff</color>
      </text>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>1</zIndex>
      </image>
   </view>

   <view name="system">
      <carousel name="systemcarousel">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <type>horizontal</type>
         <color>FFFFFF00</color>
         <size>1 1</size>
         <logoSize>0.55 0.425</logoSize>
         <logoScale>1</logoScale>
         <maxLogoCount>1</maxLogoCount>
      </carousel>
      <text name="systemInfo">
         <origin>0 0</origin>
         <pos>0 0.8</pos>
         <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
         <backgroundColor>FFFFFF00</backgroundColor>
         <fontSize>0.05</fontSize>
      </text>
      <text name="logoText">
         <fontSize>0.1</fontSize>
      </text>
   </view>

   <view name="basic,detailed,video,grid">
      <image name="logo">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.18</pos>
         <maxSize>0.4 0.15</maxSize>
      </image>
      <text name="logoText">
         <pos>0.05 0.1</pos>
         <size>0.9 0.075</size>
         <alignment>center</alignment>
         <fontSize>0.06</fontSize>
      </text>
   </view>

   <view name="basic,detailed,video">
      <textlist name="gamelist">
         <pos>0.05 0.335</pos>
         <size>0.9 0.64</size>
         <alignment>center</alignment>
         <lineSpacing>1.81</lineSpacing>
         <fontSize>0.04</fontSize>
         <scrollSound>./_inc/sounds/select.wav</scrollSound>
         <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
         <horizontalMargin>0.016</horizontalMargin>
      </textlist>
   </view>

   <view name="detailed,video,grid">
      <text name="md_lbl_rating,md_lbl_developer,md_developer,md_lbl_publisher,md_publisher,md_lbl_playcount,md_playcount,md_lbl_lastplayed,md_lbl_players,md_players,md_lbl_releasedate,md_lbl_genre,md_genre,md_description">
         <visible>false</visible>
      </text>
      <datetime name="md_lastplayed,md_releasedate">
         <visible>false</visible>
      </datetime>
      <rating name="md_rating">
         <visible>false</visible>
      </rating>
      <textlist name="gamelist">
         <pos>0.05 0.335</pos>
         <size>0.425 0.64</size>
         <alignment>left</alignment>
      </textlist>
      <image name="md_media_bezel" extra="true">
         <origin>0 0</origin>
         <pos>0.525 0.335</pos>
         <size>0.425 0.4875</size>
         <path>./_inc/images/space.png</path>
         <tile>true</tile>
      </image>
      <image name="md_media_screen" extra="true">
         <origin>0 0</origin>
         <pos>0.5375 0.35375</pos>
         <size>0.4 0.45</size>
         <color>000000</color>
         <path>./_inc/images/space.png</path>
         <tile>true</tile>
      </image>
      <image name="md_image">
         <origin>0.5 0.5</origin>
         <pos>0.7375 0.578</pos>
         <maxSize>0.4 0.45</maxSize>
      </image>
      <image name="help-favorite" extra="true">
         <origin>0 0</origin>
         <pos>0.5416666666666667 0.86</pos>
         <size>0.1875 0.05</size>
         <path>./_inc/images/help-favorite.svg</path>
      </image>
      <image name="help-launch" extra="true">
         <origin>0 0</origin>
         <pos>0.7666666666666667 0.86</pos>
         <size>0.1666666666666667 0.05</size>
         <path>./_inc/images/help-launch.svg</path>
      </image>
   </view>

   <view name="video,grid">
      <image name="md_marquee">
         <visible>false</visible>
      </image>
      <image name="md_image">
         <visible>false</visible>
      </image>
      <video name="md_video">
         <origin>0.5 0.5</origin>
         <pos>0.7375 0.578</pos>
         <maxSize>0.4 0.45</maxSize>
         <delay>0.5</delay>
         <showSnapshotDelay>true</showSnapshotDelay>
         <showSnapshotNoVideo>true</showSnapshotNoVideo>
         <storyboard>
            <animation property="opacity" from="0" to="1" duration="500" mode="Linear"/>
            <animation property="scale" from="0" to="1" duration="500" mode="EaseOutCubic"/>
         </storyboard>
      </video>
   </view>

   <view name="grid">
      <image name="md_image,md_media_bezel,md_media_screen,help-favorite,help-launch">
         <visible>false</visible>
      </image>
      <video name="md_video">
         <visible>false</visible>
         <showSnapshotDelay>false</showSnapshotDelay>
      </video>
      <imagegrid name="gamegrid">
         <pos>0.05 0.325</pos>
         <size>0.9 0.60</size>
         <margin>0 0</margin>
         <padding>0 0 0 0</padding>
         <autoLayout>3 1</autoLayout>
         <autoLayoutSelectedZoom>1.0</autoLayoutSelectedZoom>
         <centerSelection>true</centerSelection>
         <animateSelection>false</animateSelection>
         <scrollSound>./_inc/sounds/select.wav</scrollSound>
         <scrollDirection>horizontal</scrollDirection>
         <scrollLoop>true</scrollLoop>
      </imagegrid>
      <gridtile name="default">
         <padding>4 4</padding>
         <backgroundCornerSize>0 0</backgroundCornerSize>
         <selectionMode>image</selectionMode>
      </gridtile>
      <text name="gridtile">
         <alignment>center</alignment>
         <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
         <fontSize>0.04</fontSize>
      </text>
   </view>

   <view name="menu">
      <menuText name="menutitle">
         <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
         <fontSize>0.05</fontSize>
         <color>ffffff</color>
      </menuText>
      <menuText name="menufooter">
         <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
         <fontSize>0.04</fontSize>
      </menuText>
      <menuText name="menutext">
         <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
         <fontSize>0.05</fontSize>
      </menuText>
   </view>

   <view name="screen">
      <text name="clock">
         <origin>0 0</origin>
         <pos>0.020833333333333 0.034375</pos>
         <size>0.1666666666666667 0.03125</size>
         <fontSize>0.03125</fontSize>
         <alignment>left</alignment>
         <verticalAlignment>center</verticalAlignment>
         <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
      </text>
      <controllerActivity name="controllerActivity">
         <visible>false</visible>
      </controllerActivity>
   </view>
   
   <subset name="color" displayName="Color">
      <include name="dark-gray" displayName="Dark Gray">./_inc/subsets/color-dark-gray.xml</include>
   </subset>
   <subset name="background-art" displayName="Background Art">
      <include name="off" displayName="Off">./_inc/subsets/background-art-off.xml</include>
      <include name="on" displayName="On">./_inc/subsets/background-art-on.xml</include>
   </subset>
   <subset name="metadata" displayName="Metadata">
      <include name="off" displayName="Off">./_inc/subsets/metadata-off.xml</include>
      <include name="on" displayName="On">./_inc/subsets/metadata-on.xml</include>
   </subset>

</theme>