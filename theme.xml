<theme>
   <formatVersion>4</formatVersion>

   <view name="system,basic,detailed,video">
      <helpsystem name="help">
         <pos>1 1</pos>
      </helpsystem>
      <image name="logo">
         <path>./_inc/systems/${system.theme}.svg</path>
      </image>
      <text name="logoText">
         <fontPath>./_inc/fonts/ChangaOne-Italic.ttf</fontPath>
         <forceUppercase>true</forceUppercase>
         <lineSpacing>1</lineSpacing>
      </text>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <color>141414</color>
         <path>./_inc/images/space.png</path>
         <tile>true</tile>
      </image>
      <text name="logoText">
         <color>ffffff</color>
      </text>
   </view>

   <feature supported="carousel">
      <view name="system">
         <carousel name="systemcarousel">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <type>horizontal</type>
            <color>141414</color>
            <size>1 1</size>
            <logoSize>0.5 0.5</logoSize>
            <maxLogoCount>1</maxLogoCount>
         </carousel>
         <text name="systemInfo">
            <origin>0 0</origin>
            <pos>0 0.8</pos>
            <backgroundColor>141414</backgroundColor>
            <color>666666</color>
            <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
            <fontSize>0.05</fontSize>
         </text>
         <text name="logoText">
            <fontSize>0.15</fontSize>
         </text>
      </view>
   </feature>

   <view name="basic,detailed,video">
      <image name="logo">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.155</pos>
         <maxSize>0.4 0.15</maxSize>
      </image>
      <text name="logoText">
         <pos>0.05 0.1</pos>
         <size>0.9 0.075</size>
         <alignment>center</alignment>
         <fontSize>0.06</fontSize>
      </text>
      <textlist name="gamelist">
         <pos>0.05 0.325</pos>
         <size>0.9 0.6</size>
         <alignment>center</alignment>
         <lineSpacing>1.6</lineSpacing>
         <selectorColor>333333ff</selectorColor>
         <selectedColor>ffffff</selectedColor>
         <primaryColor>999999</primaryColor>
         <secondaryColor>999999</secondaryColor>
         <fontSize>0.05</fontSize>
         <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
         <horizontalMargin>0.025</horizontalMargin>
      </textlist>
   </view>

   <view name="detailed,video">
      <text name="md_lbl_rating,md_lbl_developer,md_developer,md_lbl_publisher,md_publisher,md_lbl_playcount,md_playcount,md_lbl_lastplayed,md_lbl_players,md_players,md_lbl_releasedate,md_lbl_genre,md_genre,md_description">
         <pos>1 1</pos>
      </text>
      <datetime name="md_lastplayed,md_releasedate">
         <pos>1 1</pos>
      </datetime>
      <rating name="md_rating">
         <pos>1 1</pos>
      </rating>
      <textlist name="gamelist">
         <pos>0.05 0.325</pos>
         <size>0.425 0.6</size>
         <alignment>left</alignment>
      </textlist>
      <image name="md_image">
         <origin>0.5 0.5</origin>
         <pos>0.7375 0.625</pos>
         <maxSize>0.4 0.575</maxSize>
      </image>
      <image name="md_media_background" extra="true">
         <origin>1 0</origin>
         <pos>.95 0.325</pos>
         <size>0.425 0.6</size>
         <color>333333</color>
         <path>./_inc/images/space.png</path>
         <tile>true</tile>
      </image>
   </view>

   <view name="video">
      <image name="md_marquee">
         <origin>0 0</origin>
         <pos>1 1</pos>
      </image>
      <image name="md_image">
         <origin>0 0</origin>
         <pos>1 1</pos>
      </image>
      <video name="md_video">
         <origin>0.5 0.5</origin>
         <pos>0.7375 0.625</pos>
         <maxSize>0.4 0.575</maxSize>
         <delay>0.0</delay>
         <showSnapshotNoVideo>true</showSnapshotNoVideo>
      </video>
   </view>

</theme>