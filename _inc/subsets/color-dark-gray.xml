<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>7</formatVersion>

   <view name="system,basic,detailed,video,grid">
      <image name="background" extra="true">
         <color>111111</color>
      </image>
      <text name="logoText">
         <color>ffffff</color>
      </text>
   </view>

   <view name="system">
      <text name="systemInfo">
         <color>444444</color>
      </text>
   </view>

   <view name="basic,detailed,video,grid">
      <text name="logoText">
         <color>ffffffcc</color>
      </text>
      <text name="system-name" extra="true">
         <color>ffffffcc</color>
      </text>
      <textlist name="gamelist">
         <selectorColor>ffffff11</selectorColor>
         <selectedColor>ffffff</selectedColor>
         <primaryColor>ffffff44</primaryColor>
         <secondaryColor>ffffff44</secondaryColor>
      </textlist>
   </view>

   <view name="detailed,video,grid">
      <text name="md_name">
         <color>ffffff</color>
      </text>
      <text name="md_description">
         <color>777777</color>
      </text>
      <rating name="md_rating">
         <color>bba358</color>
      </rating>
      <datetime name="md_releasedate">
         <color>444444</color>
      </datetime>
      <text name="md_genre">
         <color>444444</color>
      </text>
      <text name="md_spacer" extra="true">
         <color>222222</color>
      </text>
      <image name="md_media_bezel" extra="true">
         <color>ffffff11</color>
      </image>
      <image name="help-favorite" extra="true">
         <color>ffffff55</color>
      </image>
      <image name="help-launch" extra="true">
         <color>ffffff55</color>
      </image>
   </view>

   <view name="grid">
      <gridtile name="default">
         <backgroundColor>11111100</backgroundColor>
         <imageColor>ffffff44</imageColor>
      </gridtile>
      <gridtile name="selected">
         <backgroundColor>ffffff11</backgroundColor>
         <imageColor>ffffffff</imageColor>
      </gridtile>
      <text name="gridtile">
         <color>111111</color>
      </text>
      <text name="gridtile_selected">
         <color>cccccc</color>
      </text>
   </view>

   <view name="menu">
      <menuText name="menufooter">
         <color>666666</color>
      </menuText>
      <menuText name="menutext">
         <color>444444</color>
         <separatorColor>222222</separatorColor>
         <selectorColor>555555</selectorColor>
         <selectedColor>ffffff</selectedColor>
      </menuText>
      <menuTextSmall name="menutextsmall">
         <color>777777</color>
      </menuTextSmall>
      <menuBackground name="menubg">
         <color>111111</color>
         <centerColor>111111</centerColor>
      </menuBackground>
   </view>

   <view name="screen">
      <text name="clock">
         <color>FFFFFF22</color>
      </text>
      <batteryIndicator name="batteryIndicator">
         <color>FFFFFF22</color>
      </batteryIndicator>
   </view>

</theme>